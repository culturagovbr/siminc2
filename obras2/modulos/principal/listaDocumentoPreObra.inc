function delimitador($texto, $valor = null){

	if(!ereg('[^0-9]',$texto)){
		return $texto;
	}

	if(!$valor){
		$valor = 280;
	}

	if(strlen($texto) > $valor){
			$texto = substr($texto,0,$valor).'...';
	}

	return $texto;
}

