class Public_Model_ObjetivoMetaPpa extends Modelo
{
    /**
     * Nome da tabela especificada
     * @var string
     * @access protected
     */
    protected $stNomeTabela = 'public.objetivometappa';

    /**
     * Chave primaria.
     * @var array
     * @access protected
     */
    protected $arChavePrimaria = array(
        'opmid',
    );
    /**
     * Chaves estrangeiras.
     * @var array
     */
    protected $arChaveEstrangeira = array(
        'oppid' => array('tabela' => 'objetivoppa', 'pk' => 'oppid'),
        'mppid' => array('tabela' => 'metappa', 'pk' => 'mppid'),
    );

    /**
     * Atributos
     * @var array
     * @access protected
     */
    protected $arAtributos = array(
        'opmid' => null,
        'oppid' => null,
        'mppid' => null,
        'mpodata' => null,
    );

    public function recuperarPorExercicio($exercicio)
    {
        $sql = "select * from ".$this->stNomeTabela." where oppid in (select oppid from public.objetivoppa where prsano = '{$exercicio}')";
        $dados = $this->carregar($sql);
        $dados = $dados ? $dados : [];

        $dadosAgrupados = [];
        foreach($dados as $dado){
            $dadosAgrupados[$dado['mppid']][] = $dado['oppid'];
        }
        return $dadosAgrupados;
    }

    public function excluirPorExercicio($exercicio)
    {
        $sql = "delete from ".$this->stNomeTabela." where oppid in (select oppid from public.objetivoppa where prsano = '{$exercicio}')";
        return $this->executar($sql);
    }
}//end Class
